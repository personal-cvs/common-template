---
interface Props {
  about_url: string,
}

const { about_url } = Astro.props;

const placeholder_desktop_url = '../placeholder-desktop-hero.png';
const placeholder_mobile_url = '../placeholder-mobile-hero.png';
const behance_link = 'https://www.behance.net/ravil-ai';
const linkedin_link = 'https://www.linkedin.com/in/ravilitikeev/';
const title = 'Digital Designer from Prague';
const decription = 'Hi, Iâ€™m Ravil Itikeev, a digital designer with a keen eye for user-centered design.'
---

<section class="md:min-h-screen h-min w-full bg-black pt-[70px] sm:pt-13 md:pb-9 md:px-12 flex justify-center" id="hero">
    <div class="w-full max-w-[1440px] flex flex-col justify-between">
        <div class="hidden md:block" />
        <div class="w-full h-full md:h-fit flex justify-center flex-col-reverse md:flex-row gap-9 md:gap-12 lg:gap-14">
            <div class="h-full relative hidden lg:flex justify-end w-full">
                <img src={placeholder_desktop_url} alt="Placeholder" class=" h-full lg:w-9/12 xl:w-7/12 object-contain object-right">
            </div>
            <img src={placeholder_mobile_url} alt="Placeholder" class="block md:hidden h-[240px] 2esm:h-[380px] sm:h-[460px] w-full object-cover">
            <div class="w-full md:h-min mt-9 md:mt-0">
                <div class="flex flex-col gap-7 h-full justify-center md:h-min w-full xl:w-5/6 z-10 px-6 sm:px-9 md:px-0">
                    <h1 class="text-mh1 sm:text-h1 md:text-[52px] font-[600] leading-[100%] lg:text-h1 text-white-200 break-words w-full">{title}</h1>
                    <p class="text-pl text-white-200 break-words w-full">{decription}</p>
                    <a href={about_url} class="text-white-200 hover:text-black active:text-black disabled:text-gray-300 text-pm mt-6 lg:mt-[26px] px-8 py-5 uppercase border rounded-full border-white-200 active:border-gray-200 disabled:border-gray-300 bg-[#ffffff00] hover:bg-white-200 active:bg-gray-200 disabled:bg-[#00000000] w-fit hidden md:flex flex-nowarp items-center ease-out duration-200">
                        Scroll for more
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={2} stroke="currentColor" className="w-6 h-6" class="ml-2 w-5 h-5 stroke-2">
                            <path strokeLinecap="round" strokeLinejoin="round" d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3" />
                        </svg>  
                    </a>
                </div>
            </div>
        </div>
        <div class="mx-0 hidden md:flex flex-row justify-between h-min w-auto md:pt-12">
            <div class="flex flex-row gap-6">
                <a href={behance_link} target="_blank" rel="noopener noreferrer" class="text-white-200 leading-snug text-pm">Behance</a>
                <a href={linkedin_link} target="_blank" rel="noopener noreferrer" class="text-white-200 leading-snug text-pm">LinkedIn</a>
            </div>
            <p class="text-white-200 leading-snug text-pm">2023</p>
        </div>
    </div>
</section>