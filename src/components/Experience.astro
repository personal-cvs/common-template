---

const items = await Astro.glob('../pages/educations/*.md');

---

<section class="w-full h-min px-6 py-9 sm:px-11 sm:py-12 flex flex-col md:flex-row lg:grid lg:grid-cols-2 gap-9" id="experience">
    <h2 class="text-black text-mh2 sm:text-h2 md:w-3/6 lg:w-full">Experience & Education</h2>
    <div class="flex flex-col gap-5 sm:gap-9 w-full">
        {items.map((item, index) => (
            <div class="flex flex-col sm:flex-row gap-5">
                <div class="flex flex-row sm:flex-col gap-2 w-full">
                    <h5 class="text-black text-h6 sm:text-h5 whitespace-nowrap w-full">{item.frontmatter.dates}</h5>
                    <p class="text-gray-200 text-ps sm:text-pn mt-auto sm:mt-[0px]">{item.frontmatter.where}</p>
                </div>
                <p class="text-black text-ps sm:text-pn leading-snug w-full">{item.frontmatter.description}</p>
                {index !== items.length - 1 && <div class="block sm:hidden h-[1px] w-full bg-gray-100" />}
            </div>
        ))}
    </div>
</section>